@model IEnumerable<AttendanceManagementSystem.Models.Student>
@{
    ViewData["Title"] = "Mark Attendance";
    string facultyEmail = ViewBag.FacultyEmail as string ?? "";
    DateTime date = ViewBag.Date != null ? (DateTime)ViewBag.Date : DateTime.Today;
    bool canMark = ViewBag.CanMark ?? false;
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-8">
            <div class="card shadow mb-4" style="border-radius:1rem;background:#f6fafc;">
                <div class="card-body">

                    <!-- Centered Heading -->
                    <h2 class="fw-bold text-center mb-4" style="color:#174cb7;">Mark Attendance</h2>

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger text-center mb-3">@TempData["Error"]</div>
                    }
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success text-center mb-3">@TempData["SuccessMessage"]</div>
                    }

                    <form asp-action="MarkAttendance" method="post">
                        <input type="hidden" name="facultyEmail" value="@facultyEmail" />
                        <div class="row mb-3 justify-content-center">
                            <label for="date" class="col-sm-2 col-form-label fw-semibold text-end">Date</label>
                            <div class="col-sm-4">
                                <input type="date" name="date" class="form-control" value="@date.ToString("yyyy-MM-dd")" required readonly style="background:#e9ecef;" />
                            </div>
                        </div>

                        <!-- Scrollable wrapper for the attendance table -->
                        <div class="table-scroll-wrapper mb-3">
                            <table class="table table-bordered table-striped align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Roll Number</th>
                                        <th>Name</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Any())
                                    {
                                        for (int i = 0; i < Model.Count(); i++)
                                        {
                                            var student = Model.ElementAt(i);
                                            <tr>
                                                <td>
                                                    @student.RollNumber
                                                    <input type="hidden" name="rollNumbers" value="@student.RollNumber" />
                                                </td>
                                                <td>@student.Name</td>
                                                <td>
                                                    <select name="statuses" class="form-select" required @(canMark ? "" : "disabled")>
                                                        <option value="Present">Present</option>
                                                        <option value="Absent">Absent</option>
                                                        <option value="Late">Late</option>
                                                    </select>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="3" class="text-center text-muted">No students found in your department.</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Buttons Row -->
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" asp-controller="FacultyDashboard" asp-route-email="@facultyEmail" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Dashboard
                            </a>

                            @if (canMark)
                            {
                                <button type="submit" class="btn btn-success px-4">Submit Attendance</button>
                            }
                            else
                            {
                                <div class="alert alert-warning mb-0 d-inline-block">You cannot mark attendance for this date anymore.</div>
                            }
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
