@model IEnumerable<AttendanceManagementSystem.Models.Attendance> 
@{
    ViewData["Title"] = "Attendance History";
    string facultyEmail = ViewBag.FacultyEmail as string ?? "";
    string selectedDate = ViewBag.SelectedDate as string ?? "";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-8">
            <div class="card shadow mb-4" style="border-radius:1rem;background:#f6fafc;">
                <div class="card-body">

                    <!-- SUCCESS and ERROR Alerts -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success text-center mb-3">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger text-center mb-3">
                            @TempData["Error"]
                        </div>
                    }

                    <h2 class="fw-bold text-center mb-3" style="color:#174cb7;">Attendance History</h2>

                    <form method="get" asp-action="AttendanceHistory" asp-controller="FacultyDashboard"
                          class="row gy-2 gx-3 mb-4 align-items-center justify-content-center">
                        <input type="hidden" name="email" value="@facultyEmail" />
                        <div class="col-auto">
                            <label for="date" class="col-form-label">Select Date:</label>
                        </div>
                        <div class="col-auto">
                            <input type="date" id="date" name="date" value="@selectedDate" class="form-control" style="max-width:200px;" />
                        </div>
                        <div class="col-auto">
                            <button type="submit" class="btn btn-primary">Show</button>
                            <a asp-action="AttendanceHistory" asp-route-email="@facultyEmail" class="btn btn-secondary ms-2">Clear</a>
                        </div>
                    </form>

                    @if (!Model.Any())
                    {
                        <div class="alert alert-warning text-center mb-0">No attendance records found for the selected date.</div>
                    }
                    else
                    {
                        <div class="table-scroll-wrapper mb-3">
                            <table class="table table-striped table-bordered align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Date</th>
                                        <th>Roll Number</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var record in Model)
                                    {
                                        <tr class="@(record.Date.ToString("yyyy-MM-dd") == selectedDate && !string.IsNullOrEmpty(selectedDate) ? "table-success" : "")">
                                            <td>@record.Date.ToString("yyyy-MM-dd")</td>
                                            <td>@record.RollNumber</td>
                                            <td>
                                                @if (record.Status == "Present")
                                                {
                                                    <span class="badge bg-success">Present</span>
                                                }
                                                else if (record.Status == "Absent")
                                                {
                                                    <span class="badge bg-danger">Absent</span>
                                                }
                                                else if (record.Status == "Late")
                                                {
                                                    <span class="badge bg-warning text-dark">Late</span>
                                                }
                                                else
                                                {
                                                    @record.Status
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }

                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <a asp-action="Index" asp-route-email="@facultyEmail" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Dashboard
                        </a>
                        <a asp-action="MarkAttendance" asp-route-email="@facultyEmail" class="btn btn-success">
                            <i class="bi bi-check2-square"></i> Mark Attendance for Today
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
