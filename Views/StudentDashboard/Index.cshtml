@{
    ViewData["Title"] = "Student Dashboard";
    var roll = ViewBag.Roll as string ?? "";
    var studentName = ViewBag.StudentName as string ?? roll;
}

<div class="container py-5">
    <!-- Top bar: logout right, welcome centered -->
    <div class="row align-items-center mb-4">
        <div class="col-2 d-flex justify-content-start">
            <!-- Empty left space for balance; optional -->
        </div>
        <div class="col-8 text-center">
            <h1 class="fw-bold mb-0">Welcome, @studentName!</h1>
        </div>
        <div class="col-2 d-flex justify-content-end">
            <form method="post" asp-controller="Home" asp-action="Logout" class="mb-0">
                <button type="submit" class="btn btn-outline-danger">Logout</button>
            </form>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm p-4 h-100 d-flex flex-column align-items-center">
                <h3 class="card-title mb-3 text-center">View Attendance History</h3>
                <a href="@Url.Action("AttendanceHistory", "StudentDashboard", new { roll = roll })"
                   class="btn btn-primary w-100">
                    <i class="bi bi-clock-history"></i> View Attendance History
                </a>
            </div>
        </div>
    </div>
</div>
