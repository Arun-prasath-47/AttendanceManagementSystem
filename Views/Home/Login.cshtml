@{
    ViewData["Title"] = "Login";
}

<div class="login-center-container">
    <div class="login-container">
        <h2>Login</h2>
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Error</div>
        }

        <form asp-action="Login" asp-controller="Home" method="post">
            <div class="form-group">
                <label for="loginId">Login ID / Email</label>
                <input type="text" id="loginId" name="loginId" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" class="form-control" required />
            </div>

            <div class="button-row">
                <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Index", "Home")'">Back</button>
                <button type="submit" class="btn btn-success">Login</button>
            </div>
        </form>
    </div>
</div>
