@model AttendanceManagementSystem.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}

<h2 class="text-center mb-4">Delete Student</h2>

<div class="card shadow mx-auto" style="max-width:500px;">
    <div class="card-body">
        <h4 class="mb-3">Are you sure you want to delete this student?</h4>
        <dl class="row">
            <dt class="col-sm-4">Roll Number</dt>
            <dd class="col-sm-8">@Model.RollNumber</dd>

            <dt class="col-sm-4">Name</dt>
            <dd class="col-sm-8">@Model.Name</dd>

            <dt class="col-sm-4">Department</dt>
            <dd class="col-sm-8">@Model.DeptName (@Model.DeptCode)</dd>
        </dl>
        <form asp-action="DeleteStudent" method="post">
            <input type="hidden" name="id" value="@Model.RollNumber" />
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Students" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
