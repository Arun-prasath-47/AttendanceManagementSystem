@model AttendanceManagementSystem.Models.Faculty

@{
    ViewData["Title"] = "Delete Faculty";
}

<h2 class="text-center mb-4">Delete Faculty</h2>

<div class="card shadow mx-auto" style="max-width:500px;">
    <div class="card-body">
        <h4 class="mb-3">Are you sure you want to delete this faculty?</h4>
        <dl class="row">
            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Model.Email</dd>

            <dt class="col-sm-4">Name</dt>
            <dd class="col-sm-8">@Model.Name</dd>

            <dt class="col-sm-4">Department</dt>
            <dd class="col-sm-8">@Model.DeptName (@Model.DeptCode)</dd>
        </dl>
        <form asp-action="DeleteFaculty" method="post">
            <input type="hidden" name="id" value="@Model.Email" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Faculties" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
