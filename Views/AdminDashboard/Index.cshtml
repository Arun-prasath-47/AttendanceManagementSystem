@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">@ViewBag.Message</h1>
        <form method="post" asp-controller="Home" asp-action="Logout" class="mb-0">
            <button type="submit" class="btn btn-outline-danger">Logout</button>
        </form>
    </div>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card shadow-sm p-4 h-100 d-flex flex-column">
                <h3 class="card-title mb-3">Manage Faculty Data</h3>
           
                <a href="@Url.Action("Faculties", "AdminDashboard")" class="btn btn-primary mt-auto">Go to Faculties</a>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm p-4 h-100 d-flex flex-column">
                <h3 class="card-title mb-3">Manage Student Data</h3>
                
                <a href="@Url.Action("Students", "AdminDashboard")" class="btn btn-success mt-auto">Go to Students</a>
            </div>
        </div>
    </div>
</div>
